
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h1>Kategoriler</h1>


<table class="table table-hover table-bordered">

    <tr>

        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>


    </tr>



    @foreach(var categories in Model)
    {
        count++;

        <tr>

            <td>@count</td>
            <th>@categories.Name</th>
            <th>
                <a href="/Admin/Category/DeleteCategory/@categories.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/Category/UpdateCategory/@categories.Id" class="btn btn-primary">Güncelle</a>

            </th>


        </tr>


    }




</table>

<a href="/Admin/Category/CreateCategory" class="btn btn-success">Ekle</a>


