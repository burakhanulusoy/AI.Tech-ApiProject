@model CreateProjectDto
@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>ımage</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />


    <label>kategori</label>
    <select type="text" asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">

        <option selected disabled>Kategori sec</option>

    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
    <br />

    <button class="btn btn-success">Kaydet</button>
    

</form>
